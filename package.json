{
  "name": "react-vite-template",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "prepare": "husky",
    "postinstall": "tsx ./scripts/initialize-package",
    "init-pkg": "tsx ./scripts/initialize-package --force",
    "dev": "NODE_TLS_REJECT_UNAUTHORIZED=0 yarn panda --watch & tsx ./scripts/prepare-app",
    "build": "tsc -b && yarn panda && react-router build",
    "lint": "eslint .",
    "preview": "yarn dev --preview",
    "certs:generate": "tsx ./scripts/generate-ssl-certs"
  },
  "dependencies": {
    "@react-router/express": "^7.7.0",
    "@react-router/node": "^7.7.0",
    "@tanstack/react-query": "^5.83.0",
    "@tanstack/react-query-devtools": "^5.81.5",
    "autoprefixer": "^10.4.21",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^5.1.0",
    "humps": "^2.0.1",
    "isbot": "^5",
    "ky": "^1.8.1",
    "minimatch": "^10.0.3",
    "node-fetch": "^3.3.2",
    "query-string": "^9.2.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.60.0",
    "react-router": "^7.6.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.29.0",
    "@pandacss/dev": "^0.54.0",
    "@react-router/dev": "^7.7.0",
    "@types/compression": "^1.8.1",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/humps": "^2.0.6",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react-swc": "^3.10.2",
    "compression": "^1.8.0",
    "eslint": "^9.29.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "postcss": "^8.5.6",
    "sirv": "^3.0.1",
    "tsx": "^4.20.3",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.34.1",
    "vite": "^7.0.4",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "eslint",
      "prettier --write"
    ]
  }
}
